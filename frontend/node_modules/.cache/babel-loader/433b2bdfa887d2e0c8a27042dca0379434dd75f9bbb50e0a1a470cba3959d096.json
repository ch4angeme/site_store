rice }} рублей\r\n        <button @click=\"addToCart(item)\">Добавить в корзину</button>\r\n      </li>\r\n    </ul>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios'; // import axios for execution HTTP-requests\r\nimport Cart from '../components/CartPage.vue';\r\n\r\nexport default {\r\n  components: {\r\n    Cart,\r\n  },\r\n  data() {\r\n    return {\r\n      isCartVisible: false,\r\n      products: [], // empty mass for products\r\n      cart: [],\r\n    };\r\n  },\r\n  methods: {\r\n    async fetchProducts() {\r\n      try {\r\n        const response = await axios.get('http://localhost:5000/api/all_products');\r\n        this.products = response.data;\r\n      } catch (error) {\r\n        console.error(\"Ошибка при получении продуктов:\", error);\r\n      }\r\n    },\r\n    async addToCart(productId) {\r\n      try {\r\n        await axios.post('http://localhost:5000/api/cart/add', {\r\n          product_id: productId\r\n        }, {\r\n          headers: {\r\n            Authorization: `Bearer ${localStorage.getItem('token')}`\r\n          }\r\n        });\r\n        alert(\"Товар добавлен в корзину!\");\r\n      } catch (error) {\r\n        console.error(\"Ошибка при добавлении товара в корзину:\", error);\r\n      }\r\n    }\r\n  },\r\n  mounted() {\r\n    this.fetchProducts(); // calling the method for getting api with products\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.product-list {\r\n  display: flex;\r\n  flex-wrap: wrap;\r\n  margin-left: 50px; /* Изменено для лучшего отображения */\r\n  margin-right: 50px; /* Изменено для лучшего отображения */\r\n  list-style-type: none; /* Убираем маркеры списка */\r\n  padding: 0; /* Убираем отступы */\r\n}\r\n\r\n.product-list li {\r\n  margin: 10px; /* Отступы между товарами */\r\n  padding: 10px;\r\n  border: 1px solid #ccc; /* Граница для каждого товара */\r\n  border-radius: 5px; /* Закругленные углы */\r\n  width: 200px; /* Ширина элемента списка */\r\n  text-align: center; /* 